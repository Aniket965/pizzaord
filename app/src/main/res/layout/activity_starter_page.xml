<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_starter_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.pizzaord.starterPage"
    android:background="#c6b8ba">

    <ImageView
        android:src="@drawable/home3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />




    <Button
        android:text="Proceed"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:background="#C6FF00"
        android:elevation="23dp"
        android:onClick="next"/>
    <EditText
        android:id="@+id/consumer_name"


        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColorHint="#000000"
        android:inputType="text"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/consumer_phone_number"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/consumer_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="Mobile Number"
        android:inputType="number"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textColorHint="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="54dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />



</RelativeLayout>
